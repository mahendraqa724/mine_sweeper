  <%= button_to("Edit Board", edit_mine_sweeper_board_path(@mine_sweeper_board), method: :get, class: "btn btn-primary new-sweeper") %>
</div>
<div class="column-right">
  <%= button_to("Recent Boards", recent_boards_path, method: :get, class: "btn btn-primary new-sweeper") %>
</div>
